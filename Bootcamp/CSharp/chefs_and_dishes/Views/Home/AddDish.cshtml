<a href="/">Home</a>
<h1>Add a Dish</h1>

@model Dishes   

<form asp-action="InsertDish" asp-controller = "HomeController">
    <div class="row">
        <label asp-for="dish_name"></label>
        <input asp-controller="dish_name" type="text">
    </div>
    
    <div class="row">
        <label asp-for="tastiness"></label>
        <select asp-for="tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
    </div>
    
    <div class="row">
        <label asp-for="calories"></label>
        <input asp-controller="Calories" type="number">
    </div>
    
    <div class="row">
        <label asp-for="ChefName"></label>
            <select asp-name="ChefName" id=""></select>
            @foreach(var chef in ViewBag.AllChefs)
            {
                <option>@chef.first_name</option>
                
            }
            
    </div>
    

    <button>Add Chef</button>

</form>
