@{
    ViewData["Title"] = "Home Page";
}


<div>
    <h1>Chefs | <a href="dishes">Dishes</a></h1>
    <a href="AddChef">Add a Chef</a>
</div>

<h2>List of Chefs</h2>

<table class = "table table-striped table-bordered">
    <thead>
        <th>Name</th>
        <th>Number of Dishes</th>
    </thead>
    <tbody>
        @* //lists all chefs individually *@
        @if(ViewBag.AllChefs != null)
        {
            @foreach(var chefs in ViewBag.AllChefs)
            {
                <tr>
                    <td>@chefs.first_name @chefs.last_name</td>
                    <td>@chefs.numofdishes.count</td>
                </tr>
            }
        }
    </tbody>
</table>